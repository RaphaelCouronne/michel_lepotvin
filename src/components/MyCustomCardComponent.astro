---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   altText: string;
   name: string;
   age: number;
}

const { imagePath, altText, name, age } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('../content/paintings/abstrait/*.{jpeg,jpg,png,gif,JPG}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "../content/paintings/abstrait/*.{jpeg,jpg,png,gif,JPG}"`);
---

<div class="card">
    <Image src={images[imagePath]()} alt={altText} />
</div>