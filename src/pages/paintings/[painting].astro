const pageTitle = "Gallerie de peintures abstraites"

export function getStaticPaths() {
  return [
  {params: {painting:  'abs._8.JPG'}},
    {params: {painting: 'abs-12.png'}},
    {params: {painting: 'abs.14.png'}},
    {params: {painting: 'abs.15.jpg'}},
